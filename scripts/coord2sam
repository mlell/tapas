#!/usr/bin/env bash
## Launch the script src/coord2sam.py.
## Set appropriate environment variables in advance.
## See the help of the launched scripts by invoking
## this script with the --help option.

# This launcher was automatically generated by
# gen/gen-launchers.sh

## ----- Launcher follows -----------------------------

# Usage: python_launch SCRIPT BASEDIR ARGS...
#
# Launch a python script after setting the appropriate
# library paths. The libraries are expected in 
# BASEDIR/lib/python, SCRIPT is a path relative to BASEDIR
# All arguments except SCRIPT and BASEDIR are forwarded to
# the launched script.
function python_launch(){
    scriptname="$1"
    basedir="$2"
    shift 2

    libdir="${basedir}/lib/python:${basedir}/lib/python-ext" 


    PYTHONPATH="${libdir}"
    PYTHONPATH="${PYTHONPATH}" python3 "${basedir}/${scriptname}" "$@"
}


# Directory this script lives in
thisdir="$(dirname "$(readlink -f "$0")")"
# Launch the script and forward all command line arguments
python_launch src/coord2sam.py "${thisdir}" "$@"
